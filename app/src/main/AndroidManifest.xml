<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EAD_Mobile_Application"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <activity
            android:name=".TrainDetailsActivity"
            android:exported="false" />
        <activity
            android:name=".SplashScreenActivity"
            android:exported="true"
            android:label="Splash Screen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="Main Activity"></activity>
        <activity
            android:name=".HomeActivity"
            android:label="Home Activity"></activity>
        <activity
            android:name=".SignInActivity"
            android:label="SignIn Activity"></activity>
        <activity
            android:name=".SignUpActivity"
            android:label="SignUp Activity"></activity>
        <activity
            android:name=".ProfileActivity"
            android:label="My Profile"></activity>
        <activity
            android:name=".ReservationActivity"
            android:label="Add Booking"></activity>
        <activity
            android:name=".HistoryActivity"
            android:label="Bookings"></activity>
    </application>

</manifest>