<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#FFFFFFFF"
    android:padding="16dp"
    tools:context=".HomeActivity">

    <!-- AppBar (Toolbar) -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/appBar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="#1382a9"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:layout_marginStart="16dp" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/hamburger"
            app:tint="#FFFFFF"
            android:layout_gravity="start"
            android:layout_marginStart="16dp" />

    </androidx.appcompat.widget.Toolbar>

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appBar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="16dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF">

            <!-- Sign In Topic -->
            <TextView
                android:id="@+id/signInTopic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Train Details"
                android:textColor="#1382a9"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Start EditText -->
            <EditText
                android:id="@+id/startEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Start"
                android:textColorHint="#1382a9"
                android:backgroundTint="#1382a9"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/signInTopic"
                android:layout_marginTop="16dp" />

            <!-- End EditText -->
            <EditText
                android:id="@+id/endEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="End"
                android:textColorHint="#1382a9"
                android:backgroundTint="#1382a9"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/startEditText"
                android:layout_marginTop="16dp" />

            <!-- Search Button -->
            <Button
                android:id="@+id/searchButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Search"
                android:textColor="#1382a9"
                android:background="#FFFFFF"
                android:elevation="4dp"
                android:stateListAnimator="@null"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/endEditText"
                android:layout_marginTop="16dp" />

            <!-- Display Data -->
            <!-- Add this TableLayout to your existing layout -->
            <HorizontalScrollView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/searchButton"
                android:layout_marginTop="16dp">

                <TableLayout
                    android:id="@+id/trainTable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <TableRow xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/headerBackgroundColor"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Train Number"
                        android:textSize="16sp"
                        android:textColor="#FFFFFF"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Train Name"
                        android:textSize="16sp"
                        android:textColor="#FFFFFF"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Start - End Station"
                        android:textSize="16sp"
                        android:textColor="#FFFFFF"
                        android:gravity="center" />
                </TableRow>
            </TableLayout>
        </HorizontalScrollView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>