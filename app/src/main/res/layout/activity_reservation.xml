<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#FFFFFF"
    android:padding="16dp"
    tools:context=".ReservationActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/appBar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="#1382a9"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Add the title TextView with white color -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reservation"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:layout_marginStart="16dp" />

        <!-- Hamburger Icon -->
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="start"
            android:layout_marginStart="16dp"
            android:src="@drawable/hamburger"
            app:tint="#FFFFFF" />

    </androidx.appcompat.widget.Toolbar>


    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">

            <!-- Ticket Reservation -->
            <TextView
                android:id="@+id/ticketReservationTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:text="Ticket Reservation"
                android:textColor="#1382a9"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- From Selection -->
            <EditText
                android:id="@+id/fromEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="From"
                android:textColor="#1382a9"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ticketReservationTextView" />

            <!-- To Selection -->
            <EditText
                android:id="@+id/toEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="To"
                android:textColor="#1382a9"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fromEditText" />

            <!-- Date Selection -->
            <EditText
                android:id="@+id/dateEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="Date"
                android:textColor="#1382a9"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/toEditText" />

            <!-- Time Selection -->
            <EditText
                android:id="@+id/timeEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="Time"
                android:textColor="#1382a9"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/dateEditText" />

            <!-- Check Button and Checkbox -->

            <!-- Reserve Button -->

            <Button
                android:id="@+id/checkButton"
                android:layout_width="116dp"
                android:layout_height="61dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="92dp"
                android:background="#1382a9"
                android:text="Check"
                android:textColor="#FFFFFF"
                app:layout_constraintEnd_toStartOf="@+id/reserveButton"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/timeEditText" />

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="68dp"
                android:layout_height="55dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="92dp"
                app:layout_constraintStart_toEndOf="@+id/checkButton"
                app:layout_constraintTop_toBottomOf="@+id/timeEditText" />

            <Button
                android:id="@+id/reserveButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="172dp"
                android:layout_marginEnd="124dp"
                android:background="#1382a9"
                android:text="Reserve"
                android:textColor="#FFFFFF"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/timeEditText" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>